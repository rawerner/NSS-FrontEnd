%head
  %meta{charset: "utf-8"}
  %meta{name: "viewport", content: "width=device-width"}
  %title Flickr Photo Search
  %link{rel: "stylesheet", href: "css/normalize.css"}
  %link{rel: "stylesheet", href: "css/foundation.css"}
  %link{rel: "stylesheet", href: "css/app.css"}
  %script{src: "js/vendor/custom.modernizr.js"}
%body
  .row
    .small-12.columns
      %h1 Flickr Search
  .row
    .small-2.columns
      %input#query{type: 'text', autofocus: true}
    .small-5.columns
      %input#search.button.radius.small{type: 'button', value: 'search finder'}
      %input#clear.button.radius.small.alert{type: 'button', value: 'clear'}
      %input#clearselected.button.radius.small.alert{type: 'button', value: 'clear selected'}
      %input#saved.button.radius.small.success{type: 'button', value: 'Save'}
    .small-5.columns
  .row
    .small-8.columns
      %h4 Search Photos
      #photos
    .small-4.columns
      %h4 Saved Photos
      #saved-photos




  %script{src: 'js/vendor/jquery-1.10.2.js'}
  %script{src: 'js/vendor/foundation.min.js'}
  %script{src: 'js/vendor/underscore.js'}
  %script{src: 'js/app/app.js'}
