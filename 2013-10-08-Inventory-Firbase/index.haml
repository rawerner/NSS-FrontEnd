%head
  %meta{charset: "utf-8"}
  %meta{name: "viewport", content: "width=device-width"}
  %title Inventory System
  %link{rel: "stylesheet", href: "css/normalize.css"}
  %link{rel: "stylesheet", href: "css/foundation.css"}
  %link{rel: "stylesheet", href: "css/app.css"}
  %script{src: "js/vendor/custom.modernizr.js"}
%body
  .row
    .small-12.columns
      %h1 Inventory System
  .row
    .small-4.column
      %input#person{type: 'text', placeholder: 'Full name'}
    .small-6.column
      %input#address{type: 'text', placeholder: 'address'}
    .small-2.column
      %input#save.button.success.radius.small{type: 'button', value: 'Save'}
  .row
    .small-2.column
      %input#name{type: 'text', autofocus: true, placeholder: 'Item name'}
    .small-1.column
      %input#amount{type: 'text', placeholder: 'Qty'}
    .small-1.column
      %input#value{type: 'text', placeholder: 'Cost'}
    .small-2.column
      %input#room{type: 'text',placeholder: 'Which room?'}
    .small-2.column
      %input#condition{type: 'text', placeholder: 'Item Condition'}
    .small-2.column
      %input#date{type: 'text', placeholder: 'Date Purchased'}
    .small-2.column
      %input#add.button.success.radius.small{type: 'button', value: "Add Item"}
  .row
    .small-12.columns
      %table#items
        %tr
          %th Name
          %th Count
          %th Cost
          %th Room
          %th Condition
          %th Purchase Date

  %script{src: 'js/vendor/jquery-1.10.2.js'}
  %script{src: 'js/vendor/foundation.min.js'}
  %script{src: 'js/vendor/underscore.js'}
  %script{src: 'https://cdn.firebase.com/v0/firebase.js'}
  %script{src: 'js/app/app.js'}
